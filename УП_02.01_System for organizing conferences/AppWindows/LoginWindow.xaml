<Window x:Class="УП_02._01_System_for_organizing_conferences.AppWindows.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:УП_02._01_System_for_organizing_conferences.AppWindows"
        mc:Ignorable="d"
        Title="Вход в систему" Height="500" Width="400"
        FontFamily="Comic Sans MS"
        Icon="/Ресурсы/icon.ico">
    
    <Grid Background="#ABCFCE">
        <!-- Основной контейнер -->
        <Border Background="White" CornerRadius="10" 
                VerticalAlignment="Center" HorizontalAlignment="Center"
                Padding="30" Width="350">
            <StackPanel>
                <!-- Логотип (предполагаем, что есть в ресурсах) -->
                <Image Source="/Ресурсы/logo.png" Height="80" 
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <!-- Заголовок -->
                <TextBlock Text="Конференции по инфобезу" 
                           FontSize="16" FontWeight="Bold" 
                           TextAlignment="Center" Foreground="#546F94"
                           Margin="0,0,0,30"/>

                <!-- Поля ввода -->
                <TextBlock Text="ID пользователя:" Margin="0,0,0,5"/>
                <TextBox x:Name="txtUserId" 
                         FontSize="14" 
                         Padding="10" 
                         Margin="0,0,0,15"/>

                <TextBlock Text="Пароль:" Margin="0,0,0,5"/>
                <PasswordBox x:Name="txtPassword" 
                             FontSize="14" 
                             Padding="10" 
                             Margin="0,0,0,20"/>

                <!-- Кнопки -->
                <Button x:Name="btnLogin" 
                        Content="Войти" 
                        Background="#546F94" 
                        Foreground="White" 
                        FontSize="14" 
                        Padding="15,8" 
                        FontWeight="Bold"
                        Click="BtnLogin_Click"/>

                <Button x:Name="btnGuest" 
                        Content="Продолжить как гость" 
                        Background="Transparent" 
                        Foreground="#546F94"
                        BorderBrush="#546F94" BorderThickness="1"
                        FontSize="14" 
                        Padding="15,8" 
                        Margin="0,10,0,0"
                        Click="BtnGuest_Click"/>

                <!-- Сообщение об ошибке -->
                <TextBlock x:Name="lblError" 
                           Foreground="Red" 
                           Visibility="Collapsed" 
                           TextWrapping="Wrap"
                           Margin="0,15,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
