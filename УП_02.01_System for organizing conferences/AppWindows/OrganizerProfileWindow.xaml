<Window x:Class="УП_02._01_System_for_organizing_conferences.AppWindows.OrganizerProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:УП_02._01_System_for_organizing_conferences.AppWindows"
        mc:Ignorable="d"
        Title="Профиль организатора" Height="700" Width="600"
        FontFamily="Comic Sans MS"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Icon="/Ресурсы/icon.ico">
    
 <Grid Background="#ABCFCE">
        <Border Background="White" CornerRadius="10" Margin="20" Padding="30">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Заголовок -->
                <TextBlock Text="Редактирование профиля" 
                           FontSize="20" FontWeight="Bold" 
                           Foreground="#546F94" Margin="0,0,0,30"/>
                
                <!-- Форма редактирования -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Фото профиля -->
                        <Border BorderBrush="#546F94" BorderThickness="2" 
                                CornerRadius="75" Width="150" Height="150"
                                HorizontalAlignment="Center" Margin="0,0,0,30">
                            <Grid>
                                <Image x:Name="imgProfilePhoto" 
                                       Stretch="UniformToFill"/>
                                <Button x:Name="btnChangePhoto" Content="✎" 
                                        Background="#546F94" Foreground="White"
                                        Width="40" Height="40" 
                                        HorizontalAlignment="Right" 
                                        VerticalAlignment="Bottom"
                                        FontSize="18" FontWeight="Bold"
                                        Click="BtnChangePhoto_Click"/>
                            </Grid>
                        </Border>
                        
                        <!-- ID пользователя (только чтение) -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="ID пользователя:" 
                                       FontWeight="Bold" VerticalAlignment="Center"/>
                            <TextBox x:Name="txtUserId" Grid.Column="1" 
                                     IsReadOnly="True" Background="#F0F0F0"/>
                        </Grid>
                        
                        <!-- ФИО -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="ФИО:" 
                                       FontWeight="Bold" VerticalAlignment="Center"/>
                            <TextBox x:Name="txtFullName" Grid.Column="1"/>
                        </Grid>
                        
                        <!-- Email -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Email:" 
                                       FontWeight="Bold" VerticalAlignment="Center"/>
                            <TextBox x:Name="txtEmail" Grid.Column="1"/>
                        </Grid>
                        
                        <!-- Дата рождения -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Дата рождения:" 
                                       FontWeight="Bold" VerticalAlignment="Center"/>
                            <DatePicker x:Name="dpBirthDate" Grid.Column="1"/>
                        </Grid>
                        
                        <!-- Телефон -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Телефон:" 
                                       FontWeight="Bold" VerticalAlignment="Center"/>
                            <TextBox x:Name="txtPhone" Grid.Column="1"/>
                        </Grid>
                        
                        <!-- Пол -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Пол:" 
                                       FontWeight="Bold" VerticalAlignment="Center"/>
                            <ComboBox x:Name="cmbGender" Grid.Column="1">
                                <ComboBoxItem Content="мужской"/>
                                <ComboBoxItem Content="женский"/>
                            </ComboBox>
                        </Grid>
                        
                        <!-- Страна -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Страна:" 
                                       FontWeight="Bold" VerticalAlignment="Center"/>
                            <ComboBox x:Name="cmbCountry" Grid.Column="1"
                                      DisplayMemberPath="Название_страны"/>
                        </Grid>
                        
                        <!-- Разделитель для пароля -->
                        <Rectangle Height="1" Fill="#546F94" Margin="0,20,0,20"/>
                        <TextBlock Text="Изменение пароля" 
                                   FontWeight="Bold" FontSize="16" 
                                   Foreground="#546F94" Margin="0,0,0,15"/>
                        
                        <!-- Старый пароль -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Текущий пароль:" 
                                       FontWeight="Bold" VerticalAlignment="Center"/>
                            <PasswordBox x:Name="txtCurrentPassword" Grid.Column="1"/>
                            <CheckBox x:Name="chkShowCurrent" Grid.Column="2" 
                                      Content="Показать" VerticalAlignment="Center"
                                      Checked="ChkShowPassword_Checked"
                                      Unchecked="ChkShowPassword_Unchecked"/>
                        </Grid>
                        
                        <!-- Новый пароль -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Новый пароль:" 
                                       FontWeight="Bold" VerticalAlignment="Center"/>
                            <PasswordBox x:Name="txtNewPassword" Grid.Column="1"/>
                            <CheckBox x:Name="chkShowNew" Grid.Column="2" 
                                      Content="Показать" VerticalAlignment="Center"
                                      Checked="ChkShowPassword_Checked"
                                      Unchecked="ChkShowPassword_Unchecked"/>
                        </Grid>
                        
                        <!-- Подтверждение пароля -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Подтверждение:" 
                                       FontWeight="Bold" VerticalAlignment="Center"/>
                            <PasswordBox x:Name="txtConfirmPassword" Grid.Column="1"/>
                            <CheckBox x:Name="chkShowConfirm" Grid.Column="2" 
                                      Content="Показать" VerticalAlignment="Center"
                                      Checked="ChkShowPassword_Checked"
                                      Unchecked="ChkShowPassword_Unchecked"/>
                        </Grid>
                        
                        <TextBlock x:Name="txtPasswordError" 
                                   Foreground="Red" Visibility="Collapsed"
                                   TextWrapping="Wrap" Margin="0,10,0,0"/>
                    </StackPanel>
                </ScrollViewer>
                
                <!-- Кнопки -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" 
                            HorizontalAlignment="Right" Margin="0,30,0,0">
                    <Button x:Name="btnCancel" Content="Отмена" 
                            Background="White" Foreground="#546F94"
                            BorderBrush="#546F94" BorderThickness="1"
                            Padding="20,10" Margin="0,0,10,0"
                            Click="BtnCancel_Click"/>
                    <Button x:Name="btnSave" Content="Сохранить изменения" 
                            Background="#546F94" Foreground="White"
                            Padding="20,10" FontWeight="Bold"
                            Click="BtnSave_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
