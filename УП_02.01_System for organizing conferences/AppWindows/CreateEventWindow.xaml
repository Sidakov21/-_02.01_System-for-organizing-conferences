<Window x:Class="УП_02._01_System_for_organizing_conferences.AppWindows.CreateEventWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:УП_02._01_System_for_organizing_conferences.AppWindows"
        mc:Ignorable="d"
        Title="Создание нового мероприятия" Height="800" Width="700"
        FontFamily="Comic Sans MS"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Icon="/Ресурсы/icon.ico">

    <Grid Background="#ABCFCE">
        <Border Background="White" CornerRadius="10" Margin="20" Padding="30">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Заголовок -->
                <TextBlock Text="Создание нового мероприятия" 
                           FontSize="20" FontWeight="Bold" 
                           Foreground="#546F94" Margin="0,0,0,30"/>

                <!-- Форма создания -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Логотип мероприятия -->
                        <Border BorderBrush="#546F94" BorderThickness="2" 
                                CornerRadius="10" Width="200" Height="200"
                                HorizontalAlignment="Center" Margin="0,0,0,30">
                            <Grid>
                                <Image x:Name="imgEventLogo" 
                                       Stretch="Uniform"/>
                                <Button x:Name="btnSelectLogo" Content="Выбрать логотип" 
                                        Background="#546F94" Foreground="White"
                                        HorizontalAlignment="Center" 
                                        VerticalAlignment="Bottom"
                                        Padding="10,5" Margin="0,0,0,10"
                                        Click="BtnSelectLogo_Click"/>
                            </Grid>
                        </Border>

                        <!-- Название мероприятия -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Название:" 
                                       FontWeight="Bold" VerticalAlignment="Center"/>
                            <TextBox x:Name="txtEventName" Grid.Column="1"/>
                        </Grid>

                        <!-- Направление мероприятия -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Направление:" 
                                       FontWeight="Bold" VerticalAlignment="Center"/>
                            <ComboBox x:Name="cmbDirection" Grid.Column="1"
                                      DisplayMemberPath="направление"/>
                        </Grid>

                        <!-- Город проведения -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Город:" 
                                       FontWeight="Bold" VerticalAlignment="Center"/>
                            <ComboBox x:Name="cmbCity" Grid.Column="1"
                                      DisplayMemberPath="город"/>
                        </Grid>

                        <!-- Тип мероприятия -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Тип мероприятия:" 
                                       FontWeight="Bold" VerticalAlignment="Center"/>
                            <ComboBox x:Name="cmbEventType" Grid.Column="1"
                                      DisplayMemberPath="мероприятие"/>
                        </Grid>

                        <!-- Даты -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Дата начала:" 
                                       FontWeight="Bold" VerticalAlignment="Center"/>
                            <DatePicker x:Name="dpStartDate" Grid.Column="1"
                                        SelectedDateChanged="DatePicker_SelectedDateChanged"/>

                            <TextBlock Grid.Column="2" Text="Дата окончания:" 
                                       FontWeight="Bold" VerticalAlignment="Center"
                                       Margin="20,0,0,0"/>
                            <DatePicker x:Name="dpEndDate" Grid.Column="3"
                                        SelectedDateChanged="DatePicker_SelectedDateChanged"/>
                        </Grid>

                        <TextBlock x:Name="txtDateError" Foreground="Red" 
                                   Visibility="Collapsed" Margin="0,0,0,15"/>

                        <!-- Количество дней (вычисляется автоматически) -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Длительность (дней):" 
                                       FontWeight="Bold" VerticalAlignment="Center"/>
                            <TextBox x:Name="txtDuration" Grid.Column="1" 
                                     IsReadOnly="True" Background="#F0F0F0"/>
                        </Grid>

                        <!-- Описание мероприятия -->
                        <Grid Margin="0,0,0,15">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="Описание мероприятия:" 
                                       FontWeight="Bold" Margin="0,0,0,5"/>
                            <TextBox x:Name="txtDescription" Grid.Row="1" 
                                     Height="100" TextWrapping="Wrap" 
                                     AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
                        </Grid>

                        <!-- Разделитель -->
                        <Rectangle Height="1" Fill="#546F94" Margin="0,20,0,20"/>
                        <TextBlock Text="Автоматическое создание расписания" 
                                   FontWeight="Bold" FontSize="16" 
                                   Foreground="#546F94" Margin="0,0,0,15"/>

                        <!-- Настройки расписания -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Начало дня:" 
                                       FontWeight="Bold" VerticalAlignment="Center"/>
                            <ComboBox x:Name="cmbDayStart" Grid.Column="1" 
                                      SelectedIndex="0">
                                <ComboBoxItem Content="09:00"/>
                                <ComboBoxItem Content="10:00"/>
                                <ComboBoxItem Content="11:00"/>
                            </ComboBox>

                            <TextBlock Grid.Column="2" Text="Окончание дня:" 
                                       FontWeight="Bold" VerticalAlignment="Center"
                                       Margin="20,0,0,0"/>
                            <ComboBox x:Name="cmbDayEnd" Grid.Column="3" 
                                      SelectedIndex="0">
                                <ComboBoxItem Content="18:00"/>
                                <ComboBoxItem Content="19:00"/>
                                <ComboBoxItem Content="20:00"/>
                            </ComboBox>
                        </Grid>

                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <CheckBox x:Name="chkAutoSchedule" Grid.Column="1"
                                      Content="Автоматически создать временную сетку активностей"
                                      IsChecked="True"/>
                        </Grid>

                        <TextBlock x:Name="txtScheduleInfo" FontStyle="Italic"
                                   TextWrapping="Wrap" Margin="0,0,0,30"/>
                    </StackPanel>
                </ScrollViewer>

                <!-- Кнопки -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" 
                            HorizontalAlignment="Right" Margin="0,30,0,0">
                    <Button x:Name="btnCancel" Content="Отмена" 
                            Background="White" Foreground="#546F94"
                            BorderBrush="#546F94" BorderThickness="1"
                            Padding="20,10" Margin="0,0,10,0"
                            Click="BtnCancel_Click"/>
                    <Button x:Name="btnCreate" Content="Создать мероприятие" 
                            Background="#546F94" Foreground="White"
                            Padding="20,10" FontWeight="Bold"
                            Click="BtnCreate_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>

</Window>
