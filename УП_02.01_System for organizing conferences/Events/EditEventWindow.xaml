<Window x:Class="УП_02._01_System_for_organizing_conferences.Events.EditEventWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:УП_02._01_System_for_organizing_conferences.Events"
        mc:Ignorable="d"
        Title="Редактирование мероприятия" Height="700" Width="800"
        FontFamily="Comic Sans MS"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Icon="/Ресурсы/icon.ico">
    <Grid Background="#ABCFCE">
        <Border Background="White" CornerRadius="10" Margin="20" Padding="30">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Заголовок -->
                <TextBlock Text="Редактирование мероприятия" 
                           FontSize="20" FontWeight="Bold" 
                           Foreground="#546F94" Margin="0,0,0,30"/>

                <!-- Форма редактирования -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Логотип -->
                        <Border BorderBrush="#546F94" BorderThickness="2" 
                                CornerRadius="10" Width="200" Height="200"
                                HorizontalAlignment="Center" Margin="0,0,0,30">
                            <Grid>
                                <Image x:Name="imgLogo" Stretch="Uniform"/>
                                <Button x:Name="btnChangeLogo" Content="Изменить" 
                                        Background="#546F94" Foreground="White"
                                        HorizontalAlignment="Center" 
                                        VerticalAlignment="Bottom"
                                        Padding="10,5" Margin="0,0,0,10"
                                        Click="BtnChangeLogo_Click"/>
                            </Grid>
                        </Border>

                        <!-- Основные поля -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Название:" 
                                       FontWeight="Bold" VerticalAlignment="Center"/>
                            <TextBox x:Name="txtName" Grid.Column="1"/>
                        </Grid>

                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Направление:" 
                                       FontWeight="Bold" VerticalAlignment="Center"/>
                            <ComboBox x:Name="cmbDirection" Grid.Column="1"
                                      DisplayMemberPath="направление"/>
                        </Grid>

                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Город:" 
                                       FontWeight="Bold" VerticalAlignment="Center"/>
                            <ComboBox x:Name="cmbCity" Grid.Column="1"
                                      DisplayMemberPath="город"/>
                        </Grid>

                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Дата начала:" 
                                       FontWeight="Bold" VerticalAlignment="Center"/>
                            <DatePicker x:Name="dpStartDate" Grid.Column="1"/>

                            <TextBlock Grid.Column="2" Text="Дата окончания:" 
                                       FontWeight="Bold" VerticalAlignment="Center"
                                       Margin="20,0,0,0"/>
                            <DatePicker x:Name="dpEndDate" Grid.Column="3"/>
                        </Grid>

                        <TextBlock x:Name="txtDateError" Foreground="Red" 
                                   Visibility="Collapsed" Margin="0,0,0,15"/>

                        <!-- Описание -->
                        <Grid Margin="0,0,0,15">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="Описание:" 
                                       FontWeight="Bold" Margin="0,0,0,5"/>
                            <TextBox x:Name="txtDescription" Grid.Row="1" 
                                     Height="100" TextWrapping="Wrap" 
                                     AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>

                <!-- Кнопки -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" 
                            HorizontalAlignment="Right" Margin="0,30,0,0">
                    <Button x:Name="btnCancel" Content="Отмена" 
                            Background="White" Foreground="#546F94"
                            BorderBrush="#546F94" BorderThickness="1"
                            Padding="20,10" Margin="0,0,10,0"
                            Click="BtnCancel_Click"/>
                    <Button x:Name="btnSave" Content="Сохранить" 
                            Background="#546F94" Foreground="White"
                            Padding="20,10" FontWeight="Bold"
                            Click="BtnSave_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
