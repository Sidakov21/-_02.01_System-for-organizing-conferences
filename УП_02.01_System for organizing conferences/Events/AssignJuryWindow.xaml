<Window x:Class="УП_02._01_System_for_organizing_conferences.Events.AssignJuryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:УП_02._01_System_for_organizing_conferences.Events"
        mc:Ignorable="d"
        Title="Назначение жюри" Height="700" Width="600"
        FontFamily="Comic Sans MS"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Icon="/Ресурсы/icon.ico">

    <Grid Background="#ABCFCE">
        <Border Background="White" CornerRadius="10" Margin="20" Padding="30">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Заголовок -->
                <StackPanel Grid.Row="0" Margin="0,0,0,30">
                    <TextBlock Text="Назначение жюри для активности" 
                               FontSize="20" FontWeight="Bold" 
                               Foreground="#546F94"/>
                    <TextBlock x:Name="txtActivityInfo" FontSize="14" 
                               Foreground="#666" Margin="0,10,0,0"/>
                </StackPanel>

                <!-- Форма назначения -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Информация о жюри -->
                        <Border BorderBrush="#546F94" BorderThickness="1" 
                                CornerRadius="5" Padding="15" Margin="0,0,0,20"
                                Background="#FFF9E6">
                            <StackPanel>
                                <TextBlock Text="Информация" 
                                           FontWeight="Bold" Foreground="#546F94"/>
                                <TextBlock Text="Вы можете назначить до 5 членов жюри для оценки активности. 
Каждый член жюри должен иметь соответствующую роль в системе." 
                                           TextWrapping="Wrap" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Список жюри -->
                        <TextBlock Text="Члены жюри:" 
                                   FontWeight="Bold" FontSize="16" 
                                   Foreground="#546F94" Margin="0,0,0,10"/>

                        <!-- Жюри 1 -->
                        <Border BorderBrush="#546F94" BorderThickness="1" 
                                CornerRadius="5" Padding="15" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="Жюри 1 (обязательно)" 
                                           FontWeight="Bold" Margin="0,0,0,5"/>
                                <ComboBox x:Name="cmbJury1" DisplayMemberPath="фио"
                                          SelectionChanged="CmbJury_SelectionChanged"/>
                            </StackPanel>
                        </Border>

                        <!-- Жюри 2 -->
                        <Border BorderBrush="#546F94" BorderThickness="1" 
                                CornerRadius="5" Padding="15" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="Жюри 2" 
                                           FontWeight="Bold" Margin="0,0,0,5"/>
                                <ComboBox x:Name="cmbJury2" DisplayMemberPath="фио"
                                          SelectionChanged="CmbJury_SelectionChanged"/>
                                <CheckBox x:Name="chkJury2" Content="Не назначать" 
                                          Margin="0,5,0,0"
                                          Checked="ChkJury_Checked"
                                          Unchecked="ChkJury_Unchecked"/>
                            </StackPanel>
                        </Border>

                        <!-- Жюри 3 -->
                        <Border BorderBrush="#546F94" BorderThickness="1" 
                                CornerRadius="5" Padding="15" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="Жюри 3" 
                                           FontWeight="Bold" Margin="0,0,0,5"/>
                                <ComboBox x:Name="cmbJury3" DisplayMemberPath="фио"
                                          SelectionChanged="CmbJury_SelectionChanged"/>
                                <CheckBox x:Name="chkJury3" Content="Не назначать" 
                                          Margin="0,5,0,0"
                                          Checked="ChkJury_Checked"
                                          Unchecked="ChkJury_Unchecked"/>
                            </StackPanel>
                        </Border>

                        <!-- Жюри 4 -->
                        <Border BorderBrush="#546F94" BorderThickness="1" 
                                CornerRadius="5" Padding="15" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="Жюри 4" 
                                           FontWeight="Bold" Margin="0,0,0,5"/>
                                <ComboBox x:Name="cmbJury4" DisplayMemberPath="фио"
                                          SelectionChanged="CmbJury_SelectionChanged"/>
                                <CheckBox x:Name="chkJury4" Content="Не назначать" 
                                          Margin="0,5,0,0"
                                          Checked="ChkJury_Checked"
                                          Unchecked="ChkJury_Unchecked"/>
                            </StackPanel>
                        </Border>

                        <!-- Жюри 5 -->
                        <Border BorderBrush="#546F94" BorderThickness="1" 
                                CornerRadius="5" Padding="15" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="Жюри 5" 
                                           FontWeight="Bold" Margin="0,0,0,5"/>
                                <ComboBox x:Name="cmbJury5" DisplayMemberPath="фио"
                                          SelectionChanged="CmbJury_SelectionChanged"/>
                                <CheckBox x:Name="chkJury5" Content="Не назначать" 
                                          Margin="0,5,0,0"
                                          Checked="ChkJury_Checked"
                                          Unchecked="ChkJury_Unchecked"/>
                            </StackPanel>
                        </Border>

                        <!-- Правила валидации -->
                        <Border BorderBrush="#FF6B6B" BorderThickness="1" 
                                CornerRadius="5" Padding="15" Margin="0,20,0,0"
                                Background="#FFF0F0">
                            <StackPanel>
                                <TextBlock Text="Правила назначения:" 
                                           FontWeight="Bold" Foreground="#FF6B6B"/>
                                <TextBlock Text="1. Один человек не может быть назначен дважды" 
                                           Foreground="#FF6B6B" Margin="0,5,0,0"/>
                                <TextBlock Text="2. Все члены жюри должны быть разными" 
                                           Foreground="#FF6B6B"/>
                                <TextBlock Text="3. Член жюри не может оценивать свою же активность" 
                                           Foreground="#FF6B6B"/>
                            </StackPanel>
                        </Border>

                        <TextBlock x:Name="txtError" Foreground="Red" 
                                   Visibility="Collapsed" TextWrapping="Wrap" 
                                   Margin="0,20,0,0"/>
                    </StackPanel>
                </ScrollViewer>

                <!-- Кнопки -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" 
                            HorizontalAlignment="Right" Margin="0,30,0,0">
                    <Button x:Name="btnCancel" Content="Отмена" 
                            Background="White" Foreground="#546F94"
                            BorderBrush="#546F94" BorderThickness="1"
                            Padding="20,10" Margin="0,0,10,0"
                            Click="BtnCancel_Click"/>
                    <Button x:Name="btnSave" Content="Назначить жюри" 
                            Background="#546F94" Foreground="White"
                            Padding="20,10" FontWeight="Bold"
                            Click="BtnSave_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>